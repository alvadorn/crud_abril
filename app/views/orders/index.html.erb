<p id="notice">
  <%= notice %>
</p>

<h1>Lista de Pedidos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Cliente</th>
      <th colspan="3" class="text-center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.product.name %>
        </td>
        <td>
          <%= order.client.name %>
        </td>
        <td>
          <%= link_to 'Exibir', order , class: "btn btn-success"%>
        </td>
        <td>
          <%= link_to 'Editar', edit_order_path(order), class: "btn btn-warning" %>
        </td>
        <td>
          <%= link_to 'Apagar', order, method: :delete, class: "btn btn-danger", data: { confirm: 'Você tem certeza que deseja apagar?' } %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<% if @orders.count == 0 %>
  <p class="table-none"> Nenhum pedido a ser exibido</p>
  <% end %>
    <br>

    <%= link_to 'Novo pedido', new_order_path, class: "btn btn-primary" %>