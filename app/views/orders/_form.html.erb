<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group row">
    <%= form.label :product, "Produto" %>
    <%= form.select :product_id, Product.all.collect { |p| [p.name, p.id] }, { include_blank: "Nenhum selecionado" } %>
  </div>

  <div class="form-group row">
    <%= form.label :client, "Cliente" %>
    <%= form.select :client_id, Client.all.collect { |c| [c.name, c.id] }, { include_blank: "Nenhum selecionado" } %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
